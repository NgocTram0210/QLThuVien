@model BOL.DonViTinh
@{
    ViewBag.Title = "Đơn vị tính";
}
<div class="col-sm-12">
    @{ Html.RenderAction("MenuDanhMuc", "Layout");}

</div>                 

<div class="col-sm-12 section-search">
    <div class="col-sm-3 "></div>
    <div id="dttable_phantrang" class="col-sm-2 form-group"></div>
    <div id="datatable_thongtin" class="col-sm-4"></div><div id="datatable_print" class="col-sm-1"></div>

    <div class="input-group col-sm-2 form-group">
        <input id="datatable_search" type="text" class="form-control " placeholder="Tìm kiếm..." />
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
        </span>
    </div>
</div>


<div class="col-sm-12">
    <div class="col-sm-3">
        <form id="form_donvitinh" class="col-sm-12">
            <h4>Thêm đơn vị tính</h4>
            <div class="form-body col-sm-12">
                <div class="form-group col-sm-12">
                    @Html.LabelFor(model => model.MaDonViTinh,new { @class = "control-label col-sm-12" })
                    @Html.ValidationMessageFor(model => model.MaDonViTinh,"",new { @class = "text-danger col-sm-12" })
                    @Html.EditorFor(model => model.MaDonViTinh,new { htmlAttributes = new { @class = "form-control col-sm-12",autofocus = "" } })
                </div>

                <div class="form-group col-sm-12">
                    @Html.LabelFor(model => model.TenDonViTinh,new { @class = "control-label col-sm-12" })
                    @Html.ValidationMessageFor(model => model.TenDonViTinh,"",new { @class = "text-danger col-sm-12" })
                    @Html.EditorFor(model => model.TenDonViTinh,new { htmlAttributes = new { @class = "form-control col-sm-12", } })
                </div>

               

                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" value="Thêm mới" class="btn btn-default" />  
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-9">
        <div class="col-sm-12 dataTable form-group">
            <div class="col-sm-12 dataTable-header">
                <h4>Danh sách đơn vị tính</h4>
            </div>
            <table id="dttable" class="dataTables_scroll col-sm-12">
                <thead>
                <tr>
                    <th style="width: 10%">STT</th>
                    <th style="width: 35%">Mã đơn vị tính</th>
                    <th style="width: 35%">Tên đơn vị tính</th>
                    <th class="text-center" style="width: 20%">Thao tác</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>          



<div class="modal fade" id="modal">
    <div class="modal-dialog" role="document" style="width: 40%; height: 100%">
        <div class="modal-content" style="top: 27%">
            <div class="col-sm-12" style="background-color: #ffffff; padding: 10px;">
                <form id="mform_donvitinh" class="col-sm-12">
                    <h4>Cập nhật đơn vị tính</h4>
                    <div class="form-body col-sm-12">
                        <div class="form-group col-sm-12">
                            @Html.LabelFor(model => model.MaDonViTinh,new { @class = "control-label col-sm-12" })
                            @Html.ValidationMessageFor(model => model.MaDonViTinh,"",new { @class = "text-danger col-sm-12" })
                            @Html.EditorFor(model => model.MaDonViTinh,new { htmlAttributes = new { @class = "form-control col-sm-12",Readonly = "readonly" } })
                        </div>

                        <div class="form-group col-sm-12">
                            @Html.LabelFor(model => model.TenDonViTinh,new { @class = "control-label col-sm-12" })
                            @Html.ValidationMessageFor(model => model.TenDonViTinh,"",new { @class = "text-danger col-sm-12" })
                            @Html.EditorFor(model => model.TenDonViTinh,new { htmlAttributes = new { @class = "form-control col-sm-12",autofocus = "" } })
                        </div>

                      

                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="submit" value="Cập nhật" class="btn btn-default" />   
                                <span class="btn btn-default"  onclick="closemodal()">Đóng</span>   

                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            getalldonvitinh();
        });
    </script>
}