using BOL;
using System;
using System.Collections.Generic;
using System.Data.Entity;
using System.Linq;
namespace DAL
{
    public class DanhMucThuDal
    {
        private readonly DatabaseContext _db;
        public DanhMucThuDal()
        {
            _db = new DatabaseContext();
        }
        public List<DanhMucThu> GetAll()
        {
            try
            {
                return _db.DanhMucThus.ToList();
            }
            catch (Exception)
            {
                return null;
            }
        }

        public DanhMucThu GetOneById(string id)
        {
            return _db.DanhMucThus.Find(id);
        }
        public bool Insert(DanhMucThu item)
        {
            try
            {
                _db.DanhMucThus.Add(item);
                _db.SaveChanges();
                return true;
            }
            catch (Exception)
            {
                return false;
            }
        }
        public bool Update(DanhMucThu item)
        {
            try
            {
                _db.Entry(item).State = EntityState.Modified;
                _db.SaveChanges();
                return true;
            }
            catch (Exception)
            {
                return false;
            }
        }
        public bool Delete(string id)
        {
            try
            {
                var d = _db.DanhMucThus.Find(id);
                if (d != null) _db.DanhMucThus.Remove(d);
                _db.SaveChanges();
                return true;
            }
            catch (Exception)
            {
                return false;
            }
        }

    }
}
