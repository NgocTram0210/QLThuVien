@model WEB.Models.ViewPhieuXuat
@{
    ViewBag.Title = "Bán hàng";
}

<div class="col-sm-12">
    @{ Html.RenderAction("MenuPhieuXuat", "Layout");}
</div>

<div class="col-sm-12 section_dsphieuxuat">
    <div class="col-sm-3 form-group">
        <div class="col-sm-12 group-info">
            <h4 class="title">Lọc theo khách hàng</h4>
            <label class="col-sm-12">Khách hàng</label>
            <select class="col-sm-12" id="ThongKe_MaKhachHang" style="width: 100%">
                <option></option>
            </select>
        </div>
    </div>
    <div class="col-sm-6 form-group ">
        <div class="col-sm-12 group-info thongke_time">
            <h4 class="title">Lọc theo thời gian</h4>
            <div class="col-sm-5ths">
                <label for="inputngay" class="btn btn-default col-sm-12">Ngày</label>
                <input id="inputngay" class="form-control day" />
            </div>
            <div class="col-sm-5ths">
                <label for="inputtuan" class="btn btn-default col-sm-12">Tuần</label>
                <input id="inputtuan" class="form-control weeks" />
            </div>
            <div class="col-sm-5ths">
                <label for="inputthang" class="btn btn-default col-sm-12">Tháng</label>
                <input id="inputthang" class="form-control months" />
            </div>
            <div class="col-sm-5ths">
                <label for="inputquy" class="btn btn-default col-sm-12">Quý</label>
                <input id="inputquy" class="form-control quater" />
            </div>
            <div class="col-sm-5ths">
                <label for="inputnam" value="btnnam" class="btn btn-default col-sm-12">Năm</label>
                <input id="inputnam" class="form-control year" />
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="col-sm-12 group-container group-info">
            <h4 class="title">Tổng doanh thu</h4>
            <label style="color: red; text-align: right; width: 222px;" id="tongtiendoanhthu"></label>
        </div>
    </div>
</div>

<div class="col-sm-12 section-search">
    <div id="dttable_phantrang" class="col-sm-2 form-group"></div>
    <div id="datatable_thongtin" class="col-sm-7"></div><div id="datatable_print" class="col-sm-1"></div>
    <div class="input-group col-sm-2 form-group">
        <input id="datatable_search" type="text" class="form-control " placeholder="Tìm kiếm..." />
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
        </span>
    </div>
</div>
<div class="col-sm-12 form-group">
    <table id="danhsachphieuxuat" class="col-sm-12" style="font-size: 1.2rem">
        <thead>
        <tr>
            <th class="text-right" style="width:4%">STT</th>
            <th class="text-right" style="width:7%">Mã phiếu</th>
            <th class="text-right" style="width:13%">Kho vật tư</th>
            <th class="text-right" hidden="" style="width:15%">Sản phẩm</th>
            <th class="text-right" style="width:15%">Khách hàng</th>
            <th class="text-right" style="width:12%">Công trình</th>
            <th class="text-right" style="width:13%">Nhân viên</th>
            <th class="text-right" style="width:5%">Ngày xuất</th>
            <th class="text-right" style="width:8%">Ngày thanh toán</th>
            <th class="text-right" style="width:8%">Tổng tiền</th>
            <th class="text-center" style="width:15%">Thao tác</th>
            <th class="text-right" hidden style="display:none;">QT</th>
        </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th class="text-right" colspan="9">Tổng cộng:</th>
                <th class="text-right"></th>
                <th class="text-center"></th>
                <th class="text-right" hidden></th>
            </tr>
        </tfoot>
    </table>
</div>

<div class="modal fade" id="modal">
    <div class="modal-dialog" role="document" style="width: 100%; height: 100%">
        <div class="modal-content" style="top: 0">
            <div class="col-sm-12" style="background-color: #ffffff; padding: 10px;">

                <div class="col-sm-12 section_banhang danhsach">
                    <div class="col-sm-7">
                        <div class="col-sm-12 form-group group-container">
                            <form id="form_infokhachhang" class="col-sm-12  group-info" style="min-height: 152px;">
                                <h4 class="title">Thông tin khách hàng và phiếu xuất</h4>
                                <div class="col-sm-12">
                                    <div class="col-sm-12 form-group">
                                        <label>Ngày xuất phiếu: </label>
                                        <span class="loaddatetime2"></span>
                                        <label style="margin-left: 5px;">Phiếu xuất: </label>
                                        <span id="maxphieuxuat"></span>
                                        <label style="margin-left: 5px;">Nhân viên: </label>
                                        <span id="infonhanvien"></span>
                                        @Html.HiddenFor(x => x.PhieuXuat.MaNhanVien)
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-7">
                                            <div class="col-sm-12 form-group">
                                                @Html.LabelFor(model => model.PhieuXuat.MaKhachHang, new { @class = "control-label col-sm-12" })
                                                @Html.ValidationMessageFor(model => model.PhieuXuat.MaKhachHang, "", new { @class = "text-danger col-sm-12" })
                                                @Html.DropDownListFor(model => model.PhieuXuat.MaKhachHang, new SelectList(""), "", new { @class = "form-control col-sm-12", style = "width:100%", disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            @*<div class="col-sm-6 form-group">
                                                    @Html.LabelFor(model => model.PhieuXuat.KhachHang.DinhMucCongNo,"Công nợ hiện tại",new { @class = "control-label col-sm-12" })
                                                    @Html.EditorFor(model => model.PhieuXuat.KhachHang.DinhMucCongNo,new { htmlAttributes = new { @class = "form-control col-sm-12",Readonly = "readonly" } })
                                                </div>
                                                <div class="col-sm-6 form-group">*@
                                            @Html.LabelFor(model => model.PhieuXuat.KhachHang.CongNoConLai, new { @class = "control-label col-sm-12" })
                                            @Html.EditorFor(model => model.PhieuXuat.KhachHang.CongNoConLai, new { htmlAttributes = new { @class = "form-control col-sm-12", Readonly = "readonly" } })
                                            @*</div>*@
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-6">
                                            <div class="col-sm-12 form-group">
                                                @Html.LabelFor(model => model.PhieuXuat.MaCongTrinh, new { @class = "control-label col-sm-12" })
                                                @Html.ValidationMessageFor(model => model.PhieuXuat.MaCongTrinh, "", new { @class = "text-danger col-sm-12" })
                                                @Html.DropDownListFor(model => model.PhieuXuat.MaCongTrinh, new SelectList(""), "", new { @class = "form-control col-sm-12", style = "width:100%;" })
                                            </div>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            @Html.ValidationMessageFor(model => model.PhieuXuat.KhachHang.CongNoConLai, "", new { @class = "text-danger col-sm-12  special", style = "margin-top:0;text-align: -webkit-right;" })
                                        </div>

                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="col-sm-12 form-group group-container">
                            <form id="form_infosanphamsua" class="col-sm-12  group-info">
                                <h4 class="title">Thông tin sản phẩm</h4>
                                <div class="col-sm-12">
                                    <div class="col-sm-12">
                                        @Html.HiddenFor(x => x.ChiTietPhieuXuat.MaChiTietPhieuXuat)
                                        <div class="col-sm-5 form-group">
                                            @Html.LabelFor(model => model.ChiTietPhieuXuat.MaSanPham, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.ChiTietPhieuXuat.MaSanPham, "", new { @class = "text-danger col-sm-12" })
                                            @Html.DropDownListFor(model => model.ChiTietPhieuXuat.MaSanPham, new SelectList(""), "", new { @class = " masanpham form-control col-sm-12", style = "width:100%" })
                                        </div>
                                        <div class="col-sm-7 form-group">
                                            @Html.LabelFor(model => model.ChiTietPhieuXuat.MaSanPham, "Tên sản phẩm", new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.ChiTietPhieuXuat.MaSanPham, "", new { @class = "text-danger col-sm-12" })
                                            @Html.DropDownListFor(model => model.ChiTietPhieuXuat.MaSanPham, new SelectList(""), "", new { @class = "tensanpham form-control col-sm-12", style = "width:100%" })
                                        </div>
                                    </div>

                                    <div class="col-sm-12">
                                        <div class="col-sm-2 form-group">
                                            @Html.LabelFor(model => model.ChiTietPhieuXuat.SoLuong, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.ChiTietPhieuXuat.SoLuong, "", new { @class = "text-danger col-sm-12" })
                                            @Html.EditorFor(model => model.ChiTietPhieuXuat.SoLuong, new { htmlAttributes = new { @class = "money _number form-control col-sm-12", maxlength = 5 } })
                                        </div>
                                        <div class="col-sm-2 form-group">
                                            <label class="col-sm-12">Số lượng tồn</label>
                                            <input readonly="readonly" id="soluongton" type="text" class="col-sm-12 form-control money _number" />
                                        </div>
                                        <div class="col-sm-3 form-group">
                                            @Html.LabelFor(model => model.ChiTietPhieuXuat.MaDonViTinh, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.ChiTietPhieuXuat.MaDonViTinh, "", new { @class = "text-danger col-sm-12" })
                                            @Html.DropDownListFor(model => model.ChiTietPhieuXuat.MaDonViTinh, new SelectList(""), "", new { @class = "form-control col-sm-12", style = "width:100%" })
                                        </div>
                                        <div class="col-sm-2 form-group">
                                            @Html.LabelFor(model => model.ChiTietPhieuXuat.GiaBan, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.ChiTietPhieuXuat.GiaBan, "", new { @class = "text-danger col-sm-12" })
                                            @Html.EditorFor(model => model.ChiTietPhieuXuat.GiaBan, new { htmlAttributes = new { @class = "money form-control col-sm-12" } })
                                        </div>
                                        <div class="col-sm-3 form-group">
                                            <label class="col-sm-12">Thành tiền</label>
                                            <input readonly="readonly" id="ThanhTienSP" type="text" class="col-sm-12 form-control money" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-5 form-group">
                                            @Html.LabelFor(model => model.ChiTietPhieuXuat.MaTramBeTong, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.ChiTietPhieuXuat.MaTramBeTong, "", new { @class = "text-danger col-sm-12" })
                                            @Html.DropDownListFor(model => model.ChiTietPhieuXuat.MaTramBeTong, new SelectList(""), "", new { @class = "form-control col-sm-12", style = "width:100%" })
                                        </div>
                                        <div class="col-sm-2 text-right" style="padding-top: 23px;">
                                            <input class="btn btn-default pull-right" type="submit" value="Lưu" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-12">
                            <div class="col-sm-12 text-right form-group" style="padding-top: 4px;">
                                <input class="btn btn-lager btn-default" id="btnluuchinhsuaphieuxuat" type="button" value="Lưu chỉnh sửa" />
                                <input class="btn btn-lager btn-default btn-danger" onclick="closemodal()" type="button" value="Bỏ qua" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="col-sm-12 form-group group-container">
                            <form id="form_infothanhtoan" class="col-sm-12  group-info">
                                <h4 class="title">Thông tin thanh toán</h4>
                                <div class="col-sm-5 form-group" style="font-size: 1.3rem;">
                                    <div class="col-sm-12">
                                        <div class="col-sm-5 text-right">Sản phẩm:</div>
                                        <div class="col-sm-7 text-right" id="infoSanPham">0</div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-5 text-right">Phụ tải:</div>
                                        <div class="col-sm-7 text-right" id="infoPhuTai">0</div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-5 text-right">Chiết khấu:</div>
                                        <div class="col-sm-7 text-right">
                                            <input readonly="" id="infoChietKhau" value="0" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-5 text-right">Tạm ứng:</div>
                                        <div class="col-sm-7 text-right" id="infoTamUng">0</div>
                                    </div>
                                </div>
                                <div class="col-sm-7">
                                    <div class="col-sm-12">
                                        <div class="col-sm-6 form-group">
                                            @Html.LabelFor(model => model.PhieuXuat.TamUng, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.PhieuXuat.TamUng, "", new { @class = "text-danger col-sm-12" })
                                            @Html.EditorFor(model => model.PhieuXuat.TamUng, new { htmlAttributes = new { @class = "money form-control col-sm-12" } })
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            @Html.LabelFor(model => model.PhieuXuat.NgayThanhToan, new { @class = "control-label col-sm-12" })
                                            @Html.ValidationMessageFor(model => model.PhieuXuat.NgayThanhToan, "", new { @class = "text-danger col-sm-12" })
                                            @Html.EditorFor(model => model.PhieuXuat.NgayThanhToan, new { htmlAttributes = new { @class = "day now form-control col-sm-12" } })
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <input readonly value="0" id="TongTienPX" type="text" class="col-sm-12 form-control money" />
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-12 form-group group-container">
                            <form id="form_infophutai" class="col-sm-12  group-info">
                                <h4 class="title">Phụ tải</h4>
                                <div class="col-sm-12">
                                    @Html.HiddenFor(x => x.ChiTietPhuTai.MaChiTietPhuTai)
                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.ChiTietPhuTai.MaPhuTai, new { @class = "control-label col-sm-12" })
                                        @Html.ValidationMessageFor(model => model.ChiTietPhuTai.MaPhuTai, "", new { @class = "text-danger col-sm-12" })
                                        @Html.DropDownListFor(model => model.ChiTietPhuTai.MaPhuTai, new SelectList(""), "", new { @class = "form-control col-sm-12", style = "width:100%" })
                                    </div>
                                    <div class="col-sm-2 form-group">
                                        @Html.LabelFor(model => model.ChiTietPhuTai.SoLuong, new { @class = "control-label col-sm-12" })
                                        @Html.ValidationMessageFor(model => model.ChiTietPhuTai.SoLuong, "", new { @class = "text-danger col-sm-12" })
                                        @Html.EditorFor(model => model.ChiTietPhuTai.SoLuong, new { htmlAttributes = new { @class = "money min_number form-control col-sm-12" } })
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        @Html.LabelFor(model => model.ChiTietPhuTai.ThanhTien, new { @class = "control-label col-sm-12" })
                                        @Html.ValidationMessageFor(model => model.ChiTietPhuTai.ThanhTien, "", new { @class = "text-danger col-sm-12" })
                                        @Html.EditorFor(model => model.ChiTietPhuTai.ThanhTien, new { htmlAttributes = new { @class = "money form-control col-sm-12", Readonly = "readonly" } })
                                    </div>
                                    <div class="col-sm-3 text-right" style="padding-top: 23px;">
                                        <input id="btnthemphutai" class="btn btn-default pull-right" type="submit" value="Lưu" />
                                        <input id="btnhuyphutai" class="btn  btn-default pull-right" type="button" value="Hủy" disabled="" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-12 form-group" style="margin-top: 10px;">
                        <table id="table_chitietphieuxuat" class="col-sm-12">
                            <thead>
                                <tr>
                                    <th class="text-right" style="width: 3%;">STT</th>
                                    <th class="text-right" style="width: 18%">Sản phẩm</th>
                                    <th class="text-right" style="width: 7%">ĐVT</th>
                                    <th class="text-right" style="width: 7%">Số lượng</th>
                                    <th class="text-right" style="width: 10%">Đơn giá</th>
                                    <th class="text-right" style="width: 13%">Thành tiền</th>
                                    <th class="text-right" style="width: 13%">Kho vật tư</th>
                                    <th class="text-center" style="width: 7%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="body-ctpx"></tbody>
                            <tfoot>

                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal_chietKhau">
    <div class="modal-dialog" role="document" style="width: 40%;">
        <div class="modal-content">
            <div class="col-sm-12 group-info group-container">
                <h4>Giảm giá cho khách</h4>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <input checked type="radio" name="chietkhau" id="r1" value="1" /><label for="r1">Giảm theo %</label>
                    </div>
                    <div class="col-sm-6">
                        <input id="phantram" name="chietkhau" class="form-control money min_number" />
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <input type="radio" name="chietkhau" id="r2" value="2" /><label for="r2">Giảm theo giá trị</label>
                    </div>
                    <div class="col-sm-6">
                        <input id="giatri" name="chietkhau" class="form-control money" />
                    </div>
                </div>
                <div class="col-sm-12 text-right">
                    <input type="button" id="btn_modal_chietkhau" value="Lưu" class="btn btn-default" />
                    <input type="button" id="btn_dong_modal_chietkhau" value="Đóng" class="btn btn-default btn-danger" />
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            getallphieuxuat();
            getselect2Khachhang();
            getselect2CongTrinh();
            getselect2Sanpham();
            getselect2Donvitinh();
            getselect2Trambetong();
            getselect2Phutai();
        });
    </script>
}